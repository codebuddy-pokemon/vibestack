// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Subscription
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  plan                   Plan      @default(FREE)
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  templates     Template[]
  exports       Export[]
}

enum Plan {
  FREE
  PRO
  AGENCY
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  
  // Input data
  inputType   InputType
  inputData   Json      // Stores screenshot URL, text prompt, or URL
  
  // Generated output
  html        String    @db.Text
  css         String    @db.Text
  metadata    Json      // Colors, fonts, layout structure
  
  // Vibe scoring
  vibeScore   Int?      // 0-100
  styleType   String?   // "brutalist", "glassmorphism", etc.
  
  // Status
  isPublic    Boolean   @default(false)
  deployed    Boolean   @default(false)
  subdomain   String?   @unique
  customDomain String?  @unique
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  exports     Export[]
  
  @@index([userId])
  @@index([isPublic])
}

enum InputType {
  TEXT
  SCREENSHOT
  SKETCH
  URL
  PALETTE
}

model Template {
  id          String   @id @default(cuid())
  userId      String?
  name        String
  description String?
  thumbnail   String
  
  html        String   @db.Text
  css         String   @db.Text
  metadata    Json
  
  styleType   String
  isPremium   Boolean  @default(false)
  isPublic    Boolean  @default(true)
  price       Int?     // in cents
  downloads   Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([isPublic])
  @@index([styleType])
}

model Export {
  id        String   @id @default(cuid())
  userId    String
  projectId String
  
  format    ExportFormat
  fileUrl   String?
  
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

enum ExportFormat {
  HTML
  REACT
  NEXTJS
  ZIP
}
